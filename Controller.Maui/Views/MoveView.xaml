<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controller.Maui.Views.MoveView"
             Title="MoveView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
Padding="2"
Margin="2"
Text="RunAway"
Command="{Binding RunAwayCommand}" />
        <Button 
    Padding="2"
    Margin="2"
    Text="Attack"
    Command="{Binding AttackCommand}" />
        <Button 
            Padding="2"
            Margin="2"
            Text="Left"
            Command="{Binding ScatterTroopsLeftCommand}" />
        <Button 
            Padding="2"
            Margin="2"
        Text="Right"
        Command="{Binding ScatterTroopsRightCommand}" />
        <Button 
            Padding="2"
            Margin="2"
Text="Do Nothing"
Command="{Binding DoNothingCommand}" />
        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*,*">
        <Button 
            Padding="2"
            Margin="2"
            Grid.Column="0"
            Grid.Row="1"
Text="MoveDownLeft"
            Command="{Binding MoveDownLeftCommand}" />
        
            <Button 
            Padding="2"
            Margin="2"
                Grid.Column="1"
                Grid.Row="0"
Text="MoveUpRight"
Command="{Binding MoveUpRightCommand}" />
        
            <Button 
            Padding="2"
            Margin="2"
                Grid.Column="0"
                Grid.Row="0"
Text="MoveUpLeft"
Command="{Binding MoveUpLeftCommand}" />
        
            <Button 
            Padding="2"
            Margin="2"
                Grid.Column="1"
                Grid.Row="1"
Text="MoveDownRight"
Command="{Binding MoveDownRightCommand}" />
        </Grid>
        <Button
            Text="Grpc"
            HorizontalOptions="Fill"/>
        <Label Text="{Binding Response.Message}"/>
        
        
    </VerticalStackLayout>
</ContentPage>
